#!/usr/bin/env node

const cli = require('commander');
const updateNotifier = require('update-notifier');
const dropRight = require('lodash.dropright');
const zipObject = require('lodash.zipobject');

const pkg = require('../package.json');
const actions = require('../src/actions');

// Check for updates once a day
updateNotifier({pkg: pkg}).notify();

cli.version(pkg.version);

/**
 * Builds action from given action configuration and attaches it to commander
 */
const buildAction = (action) => {
  const name = action.args
    ? `${action.name} ${action.args}`
    : action.name;

  const command = cli
    .command(name)
    .usage(action.usage)
    .description(action.description)
    .action(action);

  if (action.options) {
    action.options.forEach(option => command.option(option.name, option.description));
  }
};

actions.forEach(buildAction);

cli.parse(process.argv);
